generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Team {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String?  @unique
  arena           String?
  pid             String   @unique
  gmail           String?
  apiToken        String?
  partipantsCount Int
  members         Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PhaseOne {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  teamName  String
  teamPid   String   @unique
  content   String?
  arena     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Verification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  teamPid   String   @unique
  password  Boolean  @default(false)
  expired   Boolean  @default(false)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Playground{
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    teamPid   String
    devices   Json?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
